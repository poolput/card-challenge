{% extends "layout/index.html" %}

{% block head %}
{{ parent() }}


<link rel="stylesheet" type="text/css" href="{{ base_url }}/theme/assets/pages/j-pro/css/j-forms.css">
<link rel="stylesheet" type="text/css" href="{{ base_url }}/theme/assets/icon/feather/css/feather.css">
<link rel="stylesheet" type="text/css" href="{{ base_url }}/theme/assets/icon/weather-icons/css/weather-icons.min.css">
<link rel="stylesheet" type="text/css" href="{{ base_url }}/theme/assets/icon/weather-icons/css/weather-icons-wind.min.css">
<link rel="stylesheet" type="text/css" href="{{ base_url }}/theme/assets/css/p-loader.css">
<link rel="stylesheet" type="text/css" href="{{ base_url }}/theme/bower_components/datatables.net/css/fixedColumns.dataTables.min.css">

<style>
	.col-form-label {
		font-size:13px !important;
	}
	#branch_id {
		font-size:13px !important;
	}


</style>
{% endblock %}

{% block content %}

<div class="pcoded-content">
	<div class="pcoded-inner-content">

		<div class="main-body">
			<div class="page-wrapper">

				<div class="page-header">
					<div class="row align-items-end">
						<div class="col-lg-4">
							<div class="page-header-breadcrumb">
								{{ breadcrumb|raw }}
							</div>
						</div>
						<div class="col-lg-8 text-right">
							<div class="page-header-title">
								<div class="d-inline">
									<h4>
										{{ title_body }} 
									</h4>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-12">
						<div class="card">
						    <div class="card-block">

						     	<div class="form-group row col">
						     		<label class="col-form-label">Branch : </label>
						     		<div class="col-sm-4">
						     			<select class="form-control" id="branch_id" name="branch_id">
						     				<option value="all" selected>All Branchs</option>
						     				{% for branch in branchs %}
												<option value="{{ branch.branch_id }}">{{ branch.branch_name }}</option>
											{% endfor %}
						     			</select>
						     		</div>
						     	</div>  
                                <div class="form-group row col">
						     		<div class="col-sm-12">
    									<label class="col-form-label" style="font-size:12px !important;">
                                     		<label class="badge badge-md bg-success">&nbsp;</label> STABLE ( Online and Full Data ) &nbsp;
											<label class="badge badge-md bg-warning" style="background-color:#ffde38 !important;border-color:#ffde38 !important;">&nbsp;</label> WARNING ( Online and Missing Data More Than 3 Hour ) &nbsp;
											<label class="badge badge-md bg-danger">&nbsp;</label> ALERT ( Offline and Missing Data ) &nbsp;
                                    	</label>
						     		</div>
						     	</div>  

	                        </div>
						</div>
					</div>
				</div>

				<div class="page-body">
					<div class="row">
						<div class="col-sm-12">

							<div class="card">
								<div class="card-block">
									Last Update :  <span id="time_update_status">2021-03-15 16:57:58</span>
									<div id="StatusDetail"></div>

										<div class="card-block box-list">
											<div class="row">
												{% for j in range(1, 18) %}
												<div class="col-lg-2">
													<div class="p-10 bg-success"  data-placement="top">												
														<p style="font-size:12px;">
															camera_name<br>
															camera_status<br>
															last_record
														</p>
													</div>
												</div>
												{% endfor %}
											</div>
										</div>

								</div>
							</div>

						</div>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>


{% endblock %}
{% block footer %}
{{ parent() }}


<!-- datatable -->
