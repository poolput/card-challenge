<script src="{{ base_url }}/theme/assets/js/filter_event.js"></script>
<script src="{{ base_url }}/theme/assets/js/density_location.js"></script>

<script>

	var dt = new Date();
	var date = dt.getFullYear() + "-" + ("0" + (dt.getMonth() + 1)).slice(-2) + "-" + ("0" + (dt.getDate() )).slice(-2);
	var time = ("0" + (dt.getHours() )).slice(-2) + ":" + ("0" + (dt.getMinutes() )).slice(-2) + ":" + ("0" + (dt.getSeconds() )).slice(-2);
	$("#time_update_status").html( date + " " + time);

	function LoadStatusData(){
		
		

		$("#StatusDetail").html( $("#branch_id").val() );
	}


	$("#branch_id").change(function(){
		LoadStatusData();
		return false;
	});


</script>

{% endblock %}
