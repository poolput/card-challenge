										<div class="col-auto card-item text-center w-100" >
											 <p class="h2 p-5 card-item-number">&bnsp;</p>
										</div>
									</div>
								</div>
							</div>
						</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

{% endblock %}
