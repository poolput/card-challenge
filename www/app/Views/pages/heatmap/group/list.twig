{% extends "layout/index.html" %}

{% block head %}
{{ parent() }}

<style>
		table tr th, table tr td {
			 vertical-align: middle !important;
			 font-size: 13px;
		}
		.center {
			 text-align: center !important;
		}
		.left {
			 text-align: left !important;
		}

</style>

{% endblock %}

{% block content %}

<div class="pcoded-content">
	<div class="pcoded-inner-content">

		<div class="main-body">
			<div class="page-wrapper">

				<div class="page-header">
					<div class="row align-items-end">
						<div class="col-lg-4">
							<div class="page-header-breadcrumb">
								{{ breadcrumb|raw }}
							</div>
						</div>
						<div class="col-lg-8 text-right">
							<div class="page-header-title">
								<div class="d-inline">
									<h4>
										{{ title_body }}
									</h4>
									</span>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="page-body">
					<div class="row">
						<div class="col-sm-12">

							<div class="card">
								<div class="card-header">
                  <div class="form-group row" >
                    <label class="col-sm-1 col-form-label" align="right">Branch:</label>
                    <div class="col-sm-4">
                      <select class="form-control" name="group_branch" id="group_branch">
												<option value="">All branch</option>
                        {% for branch in branchs %}
                            <option value="{{ branch.branch_name }}">{{branch.branch_name}}</option>
                        {% endfor %}
                      </select>
                    </div>
                  </div>
								</div>
								<div class="card-block">
									<div class="dt-responsive table-responsive">
										<table id="heatmapgroup-table" class="table table-striped table-bordered nowrap">
											<thead>
												<tr>
													<th>Id</th>
													<th>Group name</th>
													<th>Branch</th>
													<th class="center" style="width: 1%;white-space:nowrap !important;">Amount</th>
													<th>Description</th>
													<th style="width: 10px;">Tools</th>
												</tr>
											</thead>
											<tbody>
												{% for camera_group in camera_groups %}
														<tr>
															<td>{{ loop.index }}</td>
															<td>{{ camera_group.camera_group_name }}</td>
															<td>{{ camera_group.branch_name }}</td>
															<td>{{ camera_group.camera_group_count }}</td>
															<td>{{ camera_group.camera_group_desc }}</td>
															<td>
																	<a class="btn btn-secondary" href="{{ base_url }}/heatmap-group/edit/{{ camera_group.camera_group_id }}"><span>Edit</span></a>
																	<a class="btn btn-outline-secondary" href="{{ base_url }}/heatmap-group/delete/{{ camera_group.camera_group_id }}"><span>Del</span></a>
															</td>
														</tr>
												{%  endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>

						</div>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>


{% endblock %}
