	$(document).ready(function() {
		$('#heatmapcamera-table').DataTable({
			dom : 'Bfrtip',
			searching : 'True',
			buttons : [{
				text : '+ Add Row',
				className : 'btn btn-secondary',
				action : function(e, dt, node, config) {
					window.location.href="{{ base_url }}/heatmap-camera/add";
				}
			}]
		});
	$('.dt-button').removeClass('dt-button');

	$('#camera_branch').on('change',function(){
		$('#heatmapcamera-table').DataTable().columns(6).search(this.value).draw();
	});
