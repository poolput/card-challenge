{% extends "layout/index.html" %}

{% block head %}
{{ parent() }}

    <style>
        table tr th, table tr td {
           vertical-align: middle !important;
           font-size: 13px;
        }
        .center {
           text-align: center !important;
        }
        .left {
           text-align: left !important;
        }

    </style>

{% endblock %}

{% block content %}

<div class="pcoded-content">
	<div class="pcoded-inner-content">

		<div class="main-body">
			<div class="page-wrapper">

				<div class="page-header">
					<div class="row align-items-end">
						<div class="col-lg-4">
							<div class="page-header-breadcrumb">
								{{ breadcrumb|raw }}
							</div>
						</div>
						<div class="col-lg-8 text-right">
							<div class="page-header-title">
								<div class="d-inline">
									<h4>
										{{ title_body }}
									</h4>
									</span>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="page-body">
					<div class="row">
						<div class="col-sm-12">
							<div class="card">
								<div class="card-header">
									<div class="form-group row">
										<label class="col-sm-1 col-form-label">Branch:</label>
										<div class="col-sm-4">
											<select class="form-control" name="cameara_branch"	id="camera_branch">
                        <option value="">All branchs</option>
												{% for branch in branchs %}
												  <option value="{{ branch.branch_name }}">{{branch.branch_name}}</option>
												{% endfor %}
											</select>
										</div>
									</div>
								</div>
								<div class="card-block">
									<div class="dt-responsive table-responsive">
										<table id="heatmapcamera-table" class="table table-striped table-bordered Compact nowrap" width="100%">
											<thead>
												<tr>
													<th class="center"  style="width: 1%;white-space:nowrap !important;">Id</th>
													<th>Camera_Id</th>
													<th>Branch_Id</th>
													<th class="left">Name</th>
													<th class="center"  style="width: 1%;white-space:nowrap !important;">IP</th>
													<th class="center"  style="width: 1%;white-space:nowrap !important;">Floor</th>
													<th>Branch</th>
													<th class="center"  style="width: 1%;white-space:nowrap !important;">Zone Analysis</th>
													<th style="width: 10px;">Tools</th>
												</tr>
											</thead>
											<tbody>
												{% for camera in cameras %}
														<tr>
															<td>{{ loop.index }}</td>
															<td>{{ camera.camera_id }}</td>
															<td>{{ camera.branch_id }}</td>
															<td>{{ camera.camera_name }}</td>
															<td>{{ camera.camera_ip }}</td>
															<td>{{ camera.floor }}</td>
															<td>{{ camera.branch_name }}</td>
															{% if camera.start_time is empty and camera.end_time is empty %}
																<td><i class='icofont icofont-ui-press' style='color:red'></i></td>
															{% elseif camera.date > camera.end_time %}
																<td><i class='icofont icofont-ui-press' style='color:green'></i></td>
															{% else %}
																<td><i class='icofont icofont-ui-press' style='color:red'></i></td>
															{% endif %}
															<td>
																	<a class="btn btn-secondary" href="{{ base_url }}/heatmap-camera/edit/{{ camera.camera_id }}"><span>Edit</span></a>
																	<a class="btn btn-outline-secondary" href="{{ base_url }}/heatmap-camera/delete/{{ camera.camera_id }}"><span>Del</span></a>
															</td>
														</tr>
												{%  endfor %}
											</tbody>
										</table>
									</div>
								</div>
							</div>

						</div>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>


{% endblock %}
